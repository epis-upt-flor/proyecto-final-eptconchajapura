<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoCF</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/layout.css" rel="stylesheet" />
@*     <!-- En el head -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">

    <!-- Al final del body, antes de los scripts propios -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script> *@
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <!-- Botón de salir -->
                <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                    <button type="submit" class="btn me-3">
                        <i class="fas fa-sign-out-alt"></i> Salir
                    </button>
                </form>

                <!-- Logo del proyecto -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book"></i> ProyectoCF
                </a>

                <!-- Botón de menú móvil -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú de navegación -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (Context.Session.GetString("Rol") == "Administrador" || Context.Session.GetString("Rol") == "Docente")
                            {
                                <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                    <i class="fas fa-users"></i> Usuarios
                                </a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetString("Rol") == "Administrador" || Context.Session.GetString("Rol") == "Docente")
                            {
                                <a class="nav-link" asp-area="" asp-controller="Cursos" asp-action="Index">
                                    <i class="fas fa-chalkboard"></i> Cursos
                                </a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetString("Rol") == "Administrador" || Context.Session.GetString("Rol") == "Docente")
                            {
                                <a class="nav-link" asp-area="" asp-controller="Materiales" asp-action="Index">
                                    <i class="fas fa-file-alt"></i> Materiales
                                </a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetString("Rol") == "Administrador" || Context.Session.GetString("Rol") == "Docente")
                            {
                                <a class="nav-link" asp-area="" asp-controller="EstudiantesCursos" asp-action="Index">
                                    <i class="fas fa-user-check"></i> Asignaciones
                                </a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetString("Rol") == "Estudiante")
                            {
                                <a class="nav-link" asp-area="" asp-controller="Chat" asp-action="Index">
                                    <i class="fas fa-comments"></i> Chat IA
                                </a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Evaluaciones" asp-action="Index">
                                <i class="fas fa-poll-h"></i> Evaluaciones
                            </a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link" asp-area="" asp-controller="Juegos" asp-action="Index">
                                <i class="fas fa-poll-h"></i> Juegos
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal con Flexbox -->
    <div class="content-wrapper">
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - ProyectoCF -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-shield-alt"></i> Privacy
            </a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>