@model ProyectoCF.Models.Evaluacion

<!-- CSS personalizado -->
<link rel="stylesheet" href="~/css/cursos.css" />

<div class="container mt-5 mb-5">
    <div class="card bg-dark text-white shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <h2 class="text-lg" style="color: #bb86fc;">
                <i class="fas fa-file-alt me-2"></i>Crear Evaluación
            </h2>
        </div>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Titulo" class="form-label">Título</label>
                <input type="text" name="Titulo" class="form-control bg-dark text-white border-purple" required />
            </div>

            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripción</label>
                <textarea name="Descripcion" class="form-control bg-dark text-white border-purple" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="CursoId" class="form-label">Curso</label>
                <select name="CursoId" class="form-select bg-dark text-white border-purple" required>
                    @foreach (var curso in ViewBag.Cursos as List<ProyectoCF.Models.Curso>)
                    {
                        <option value="@curso.Id">@curso.Nombre</option>
                    }
                </select>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-create">
                    <i class="fas fa-save me-2"></i>Guardar Evaluación
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .border-purple {
            border: 1px solid #bb86fc;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #bb86fc;
            box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
        }

        .btn-create {
            background-color: #bb86fc;
            color: #121212;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-create:hover {
                background-color: #a76efb;
                transform: scale(1.05);
            }
    </style>
}
