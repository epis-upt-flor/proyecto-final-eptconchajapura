@model IEnumerable<ProyectoCF.Models.CursoViewModel>

<div class="text-center mb-4">
    <h2 class="text-lg" style="color: #bb86fc;">Cursos</h2>
</div>

@if (ViewBag.Rol == "Administrador")
{
    <a asp-action="Create" class="btn btn-primary mb-3 d-block w-25 mx-auto">
        <i class="fas fa-plus me-2"></i> Crear Curso
    </a>
}

<div class="table-responsive">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Docente</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Nombre</td>
                    <td>@curso.Descripcion</td>
                    <td>@curso.DocenteNombre</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i> Editar
                            </a>
                            @if (ViewBag.Rol == "Administrador")
                            {
                                <form asp-action="Delete" asp-route-id="@curso.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm ms-2">
                                        <i class="fas fa-trash-alt me-1"></i> Eliminar
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>