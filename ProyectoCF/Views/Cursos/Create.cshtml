@model ProyectoCF.Models.Curso

<!-- CSS reutilizado -->
<link rel="stylesheet" href="~/css/cursos.css" />

<div class="container mt-4 mb-5">
    <div class="card bg-dark text-white shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <h2 class="text-lg" style="color: #bb86fc;">Crear Curso</h2>
        </div>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre del Curso</label>
                <input type="text" name="Nombre" class="form-control bg-dark text-white border-purple" required placeholder="Ej. Matemáticas, Historia..." />
            </div>

            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripción</label>
                <textarea name="Descripcion" rows="3" class="form-control bg-dark text-white border-purple" placeholder="Describe brevemente el contenido del curso..."></textarea>
            </div>

            <div class="mb-3">
                <label for="DocenteId" class="form-label">Asignar Docente</label>
                <select name="DocenteId" class="form-select bg-dark text-white border-purple">
                    <option disabled selected>Seleccione un docente</option>
                    @foreach (var docente in ViewBag.Docentes as List<ProyectoCF.Models.Usuario>)
                    {
                        <option value="@docente.Id">@docente.Nombre @docente.Apellido</option>
                    }
                </select>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-create">
                    <i class="fas fa-save me-2"></i> Guardar Curso
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .border-purple {
            border: 1px solid #bb86fc;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #bb86fc;
            box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
        }

        .btn-create {
            background-color: #bb86fc;
            color: #121212;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-create:hover {
                background-color: #a76efb;
                transform: scale(1.05);
            }
    </style>
}
