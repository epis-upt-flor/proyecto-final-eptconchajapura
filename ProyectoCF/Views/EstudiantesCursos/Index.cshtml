@model IEnumerable<ProyectoCF.Models.EstudianteCurso>

<div class="text-center mb-4">
    <h2 class="text-lg" style="color: #bb86fc;">Asignaciones de Cursos</h2>
</div>

<a asp-action="Create" class="btn btn-primary mb-3 d-block w-25 mx-auto">
    <i class="fas fa-plus me-2"></i> Asignar Curso
</a>

<div class="table-responsive">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Estudiante</th>
                <th scope="col">Curso</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asignacion in Model)
            {
                <tr>
                    <td>@asignacion.Estudiante.Nombre @asignacion.Estudiante.Apellido</td>
                    <td>@asignacion.Curso.Nombre</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@asignacion.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt me-1"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>