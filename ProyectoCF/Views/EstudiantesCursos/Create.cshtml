@model ProyectoCF.Models.EstudianteCurso

<h2>Asignar Curso</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="EstudianteId">Estudiante</label>
        <select name="EstudianteId" class="form-control" required>
            @foreach (var estudiante in ViewBag.Estudiantes as List<ProyectoCF.Models.Usuario>)
            {
                <option value="@estudiante.Id">@estudiante.Nombre @estudiante.Apellido</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CursoId">Curso</label>
        <select name="CursoId" class="form-control" required>
            @foreach (var curso in ViewBag.Cursos as List<ProyectoCF.Models.Curso>)
            {
                <option value="@curso.Id">@curso.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Asignar</button>
</form>
