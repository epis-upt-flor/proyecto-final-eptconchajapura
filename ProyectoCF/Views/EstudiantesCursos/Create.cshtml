@model ProyectoCF.Models.EstudianteCurso

@{
    ViewData["Title"] = "Asignar Curso";
}

<link rel="stylesheet" href="~/css/cursos.css" />

<div class="container mt-4 mb-5">
    <div class="card bg-dark text-white shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <h2 class="text-lg" style="color: #bb86fc;">Asignar Curso</h2>
        </div>

        <form asp-controller="EstudiantesCursos" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="EstudianteId" class="form-label">Estudiante</label>
                <select asp-for="EstudianteId" class="form-select bg-dark text-white border-purple" required>
                    <option value="">-- Seleccione un estudiante --</option>
                    @foreach (var estudiante in ViewBag.Estudiantes as List<ProyectoCF.Models.Usuario>)
                    {
                        <option value="@estudiante.Id">@estudiante.Nombre @estudiante.Apellido</option>
                    }
                </select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CursoId" class="form-label">Curso</label>
                <select asp-for="CursoId" class="form-select bg-dark text-white border-purple" required>
                    <option value="">-- Seleccione un curso --</option>
                    @foreach (var curso in ViewBag.Cursos as List<ProyectoCF.Models.Curso>)
                    {
                        <option value="@curso.Id">@curso.Nombre</option>
                    }
                </select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-create">
                    <i class="fas fa-plus me-2"></i> Asignar
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .border-purple {
            border: 1px solid #bb86fc;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #bb86fc;
            box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
        }

        .btn-create {
            background-color: #bb86fc;
            color: #121212;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-create:hover {
                background-color: #9b5de5;
                transform: scale(1.05);
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
