@model ProyectoCF.Models.EstudianteCurso

<link rel="stylesheet" href="~/css/cursos.css" />

<div class="container mt-5 mb-5">
    <div class="card bg-dark text-white shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <h2 class="text-lg" style="color: #ff6b6b;">
                <i class="fas fa-trash-alt me-2"></i>Eliminar Asignación
            </h2>
        </div>

        <div class="text-center">
            <p class="fs-5">
                ¿Está seguro de que desea eliminar la asignación del estudiante
                <strong>@Model.Estudiante.Nombre @Model.Estudiante.Apellido</strong><br />
                al curso <strong>@Model.Curso.Nombre</strong>?
            </p>
        </div>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash me-1"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Cancelar
            </a>
        </form>
    </div>
</div>
