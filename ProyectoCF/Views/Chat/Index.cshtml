@model List<ProyectoCF.Models.Curso>

<div class="text-center mb-4">
    <h2 class="text-lg" style="color: #bb86fc;">Cursos Asignados</h2>
</div>

@if (Model.Any())
{
    <div class="row justify-content-center">
        @foreach (var curso in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-light border-secondary h-100">
                    <div class="card-body d-flex flex-column align-items-center">
                        <i class="fas fa-book fa-3x mb-3" style="color: #bb86fc;"></i>
                        <h5 class="card-title">@curso.Nombre</h5>
                        <a asp-action="Chat" asp-route-id="@curso.Id" class="btn btn-primary mt-auto">
                            <i class="fas fa-comments me-2"></i> Comenzar Chat
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <p class="text-light">No tienes cursos asignados.</p>
    </div>
}